%h1 Categories

%table.table.table-hover
  - categories.each do |category|
    %tr
      - if !current_user.nil? && current_user.admin?
        %td
          = link_to category.name, category
          .btn-group.btn-group-sm
            = link_to 'Edit', edit_category_path(category), :class => 'btn btn-default'
            = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default'
      - else
        %td= link_to category.name, category_products_path(category)

%br

- if !current_user.nil? && current_user.admin?
  = link_to 'New Category', new_category_path, :class => 'btn btn-default'